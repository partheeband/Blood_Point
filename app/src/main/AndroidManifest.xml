<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bloodpoint">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_bloodpoint_foreground"
        android:logo="@mipmap/icon_bloodpoint_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_bloodpoint_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".DeveloperInfoActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".BloodInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ViewBloodRequestActivity" android:screenOrientation="portrait" />
        <activity android:name=".RequestBloodActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SearchDonorActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ViewProfileActivity" android:screenOrientation="portrait"/>
        <activity android:name=".DashboardActivity" android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|adjustResize|adjustPan"/>
        <activity android:name=".SignupActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>