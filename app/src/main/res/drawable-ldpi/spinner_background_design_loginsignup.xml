<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <stroke
                android:width="1dp"
                android:color="#696C70"/>
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="30dp"
                android:top="1dp"/>
            <corners android:radius="100dp"/>
            <solid android:color="#495173"/>
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/spinnerarrow"
            android:gravity="right">
        </bitmap>
    </item>
</layer-list>
