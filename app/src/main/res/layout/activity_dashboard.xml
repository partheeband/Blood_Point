<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E0000"
    tools:context=".DashboardActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="42sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/imageViewOption"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_options"
            android:layout_toEndOf="@+id/textViewDashboard"
            android:layout_marginTop="40dp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/textViewWelcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDashboard"
            android:layout_marginStart="20dp"
            android:text="Welcome, User!"
            android:textColor="#E7C0C0"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_below="@+id/textViewWelcomeUser"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageViewBigHeart"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/icon_bigheart" />

            <ImageView
                android:id="@+id/imageViewUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/dashboard_userinfo" />

            <ImageView
                android:id="@+id/imageViewSearchDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@+id/imageViewUserInfo"
                app:srcCompat="@drawable/dashboard_finddonor" />

            <ImageView
                android:id="@+id/imageViewSaveALife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewUserInfo"
                android:layout_marginStart="40dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/dashboard_savealife" />

            <ImageView
                android:id="@+id/imageViewRequestBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewSearchDonor"
                android:layout_marginStart="70dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/imageViewSaveALife"
                app:srcCompat="@drawable/dashboard_reqblood" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LOGOUT"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:backgroundTint="#F72B2B"
            android:tooltipText="Logout User"/>

    </RelativeLayout>

</ScrollView>